  "license": "ISC",
  "devDependencies": {
    "@shelf/jest-mongodb": "^2.0.1",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.1",
    "standard": "^16.0.3"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.1.0",
    "validator": "^13.6.0"
  }
}
